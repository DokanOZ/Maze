<Window x:Class="Maze.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Maze"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition />
            <RowDefinition />
            <RowDefinition />
            <RowDefinition />
        </Grid.RowDefinitions>
        <Button Grid.Row="0" x:Name="btnStart" Content="Start" FontSize="40" FontFamily="Segoe UI Black" Background="Lavender" Click="btnStart_Click"/>
        <Button Grid.Row="1" x:Name="btnSettings" Content="Settings" FontSize="40" FontFamily="Segoe UI Black" Background="LightPink" Click="btnSettings_Click"/>
        <Button Grid.Row="2" x:Name="btnScore" Content="Score" FontSize="40" FontFamily="Segoe UI Black" Background="CornflowerBlue" Click="btnScore_Click"/>
        <Button Grid.Row="3" x:Name="btnExit" Content="Exit" FontSize="40" FontFamily="Segoe UI Black" Background="LightGreen" Click="btnExit_Click"/>
    </Grid>
</Window>
