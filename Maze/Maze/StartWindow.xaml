<Window x:Class="Maze.StartWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Maze"
        mc:Ignorable="d"
        Title="StartWindow" Height="450" Width="800" KeyDown="Game_KeyDown">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="60"/>
            <RowDefinition Height="auto"/>
        </Grid.RowDefinitions>
        <Label Grid.Row="0" Name="LabelExhaustion" Content="Exhaustion" FontSize="30" FontFamily="Segoe UI Black"/>
        <Label Grid.Row="0" Name="LabelTraps" Content="Traps" FontSize="30" FontFamily="Segoe UI Black" HorizontalAlignment="Right"/>
        <Label Grid.Row="0" Name="LabelCurrentLevel" Content="Level" FontSize="30" FontFamily="Segoe UI Black" HorizontalAlignment="Center"/>
        <Canvas Grid.Row="1" x:Name="GameCanvas" Height="300" Width="300"/>
    </Grid>
</Window>
